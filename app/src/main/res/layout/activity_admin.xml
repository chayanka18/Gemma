<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivityCategory">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:text="Add new Product"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/linear1_category"
        android:layout_below="@+id/category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/set"
            android:src="@drawable/settcvr"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/ring"
            android:src="@drawable/fingerringcover"/>

        <ImageView
            android:id="@+id/chain"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/chaincover" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/bangle"
            android:src="@drawable/banglecover"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/linear2_category"
        android:layout_below="@+id/linear1_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/handmade"
            android:src="@drawable/handmadefinalcvr"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/bracelet"
            android:src="@drawable/braceletcover"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/earring"
            android:src="@drawable/earringcover"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/nosepin"
            android:src="@drawable/nosecover"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/linear3_category"
        android:layout_below="@+id/linear2_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"

        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/trending"
            android:src="@drawable/trendingfinalcvr"
            android:layout_marginLeft="5dp"

           />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/special"
            android:src="@drawable/specialfinalcvr"
           />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/wedding"
            android:src="@drawable/weddingfinalcvr"

            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/kids"
            android:src="@drawable/kidsfinalcvr"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/linear4_category"
        android:layout_below="@+id/linear3_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/oxy"
        android:src="@drawable/oxyfinalcvr"
        />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/boho"
            android:src="@drawable/bohfinalcvr"
            />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/linear2_category"
        android:layout_marginStart="10dp"
        android:layout_marginTop="293dp"
        android:layout_marginBottom="20dp"
        android:text="CHECK NEW ORDERS"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/view_products"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/linear2_category"
        android:layout_marginStart="220dp"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:text="VIEW PRODUCTS"
        android:textAlignment="center"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/admin_logout"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_orders_btn"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="45dp"
        android:text="LOGOUT" />


</RelativeLayout>